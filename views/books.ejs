<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Book Library</title>
    <style>
        .container { max-width: 1200px; margin: 0 auto; padding: 20px; }
        .header { display: flex; justify-content: space-between; align-items: center; margin-bottom: 20px; }
        .search-form { background: #f8f9fa; padding: 15px; border-radius: 5px; margin-bottom: 20px; }
        .form-row { display: flex; gap: 15px; margin-bottom: 10px; flex-wrap: wrap; }
        .form-group { flex: 1; min-width: 200px; }
        label { display: block; margin-bottom: 5px; font-weight: bold; }
        input, select { width: 100%; padding: 8px; border: 1px solid #ddd; border-radius: 4px; }
        .btn { 
            padding: 10px 20px !important; 
            border: none !important; 
            border-radius: 4px !important; 
            cursor: pointer !important; 
            text-decoration: none !important; 
            display: inline-block !important; 
            text-align: center !important;
            font-size: 14px !important;
            font-weight: 500 !important;
            transition: all 0.2s ease !important;
            margin: 0 5px !important;
            min-width: 100px;
        }
        .btn-primary { background: #007bff; color: white; }
        .btn-primary:hover { background: #0056b3; }
        .btn-success { background: #28a745; color: white; }
        .btn-success:hover { background: #218838; }
        .btn-warning { background: #ffc107; color: black; }
        .btn-warning:hover { background: #e0a800; }
        .btn-danger { background: #dc3545; color: white; }
        .btn-danger:hover { background: #c82333; }
        .btn-secondary { background: #6c757d; color: white; }
        .btn-secondary:hover { background: #5a6268; }
        .book-table { width: 100%; border-collapse: collapse; margin-top: 20px; }
        .book-table th, .book-table td { padding: 12px; text-align: left; border-bottom: 1px solid #ddd; }
        .book-table th { background: #f8f9fa; font-weight: bold; }
        .actions { display: flex; gap: 8px; }
        .actions .btn { 
            min-width: 70px !important; 
            padding: 8px 15px !important; 
            font-size: 13px !important;
        }
        .no-books { text-align: center; padding: 40px; color: #6c757d; }
        .form-actions { margin-top: 15px; display: flex; gap: 10px; }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <h1>Book Library</h1>
            <div>
                <a href="/books/create" class="btn btn-success">Add New Book</a>
                <a href="/logout" class="btn btn-danger">Logout</a>
            </div>
        </div>

        <!-- Search Form -->
        <div class="search-form">
            <h3>Search Books</h3>
            <form method="GET">
                <div class="form-row">
                    <div class="form-group">
                        <label for="author">Author:</label>
                        <input type="text" id="author" name="author" value="<%= query.author || '' %>" placeholder="Enter author name">
                    </div>
                    <div class="form-group">
                        <label for="genre">Genre:</label>
                        <select id="genre" name="genre">
                            <option value="all">All Genres</option>
                            <option value="Fiction" <%= query.genre === 'Fiction' ? 'selected' : '' %>>Fiction</option>
                            <option value="Non-Fiction" <%= query.genre === 'Non-Fiction' ? 'selected' : '' %>>Non-Fiction</option>
                            <option value="Science" <%= query.genre === 'Science' ? 'selected' : '' %>>Science</option>
                            <option value="Technology" <%= query.genre === 'Technology' ? 'selected' : '' %>>Technology</option>
                            <option value="History" <%= query.genre === 'History' ? 'selected' : '' %>>History</option>
                            <option value="Biography" <%= query.genre === 'Biography' ? 'selected' : '' %>>Biography</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="year">Publication Year:</label>
                        <input type="number" id="year" name="year" value="<%= query.year || '' %>" placeholder="e.g., 2020">
                    </div>
                </div>
                <div class="form-actions">
                    <button type="submit" class="btn btn-primary">Search</button>
                    <a href="/books" class="btn btn-secondary">Clear</a>
                </div>
            </form>
        </div>

        <!-- Books Table -->
        <% if (books.length > 0) { %>
            <table class="book-table">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Author</th>
                        <th>ISBN</th>
                        <th>Genre</th>
                        <th>Year</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% books.forEach(book => { %>
                        <tr>
                            <td><%= book.title %></td>
                            <td><%= book.author %></td>
                            <td><%= book.isbn %></td>
                            <td><%= book.genre %></td>
                            <td><%= book.year || '-' %></td>
                            <td class="actions">
                                <a href="/books/edit/<%= book._id %>" class="btn btn-warning">Edit</a>
                                <form action="/books/delete/<%= book._id %>" method="POST" style="display: inline;">
                                    <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this book?')">Delete</button>
                                </form>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        <% } else { %>
            <div class="no-books">
                <h3>No books found</h3>
                <p>No books match your search criteria. <a href="/books" class="btn btn-primary">View all books</a> or <a href="/books/create" class="btn btn-success">add a new book</a>.</p>
            </div>
        <% } %>
    </div>
</body>
</html>